<%= form_tag '/products/:id/image', method: :post do %>
  <div>
  <%= label_tag :image_1%>
  <%= text_field_tag :image_1 %>
  </div>


  <div>
  <%= label_tag :product_id%>
  <%= collection_select :product_id, :product_id, Product.all, :id, :name %>
  </div>

  <div>
  <%= submit_tag "Save Image"%>
  </div>

<% end %>
