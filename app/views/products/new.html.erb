
<div class="center_everything">

    <% if @product.errors.any? %>
        <%flash[:danger] =@product.errors.full_messages.join("<br>").html_safe%>
    <%end%>

<h1 class="product_edit"> Please enter your product you would like to sell: </h1>

<%= form_tag '/products/create', method: :post do %>

    <div class="product_edit">
    <%= label_tag :name %>
    <%=text_field_tag :name, @product.name %>
    </div>
    <div class="product_edit">
    <%= label_tag :price %>
    <%=text_field_tag :price, @product.price %>
    </div>

    <div class="product_edit">
    <%= label_tag :image %>
    <%=text_field_tag :image, @product.image %>
    </div>

    <div class="product_edit">
    <%= label_tag :description %>:
    <%=text_field_tag :description, @product.description %>
    </div>

    <div class="product_edit">
    <%= label_tag :supplier_id, "Supplier" %>:
    <%= collection_select :supplier_id,:supplier_id, Supplier.all, :id, :name %>
    </div>

  <div>
  <%= submit_tag "Save product" %>
  </div>
</div>
<% end -%>
