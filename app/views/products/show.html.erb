
<div class="center_everything">
  <h1 class="product_edit"> <%= @product.name%> </h1>
  <img src=<%= @product.image %>></p>
  <p class="product_edit"><%= @product.description %></p>
  <p class="product_edit"> Taxes: <%= number_to_currency(@product.tax)%></p>
  <p class="product_edit"> Total: <%= number_to_currency(@product.total)%></p>
  <p class="sale"><%= @product.sale_message %></p>
  <p ><a class="btn btn-info btn-md" href="/products/<%= @product.id %>/edit" role="button">Edit</a>
  <%= link_to "Delete Item", "/products/#{@product.id}", method: :delete , class: "btn btn-danger"%></p>
  <p><a class="btn btn-info btn-md" href="/products" role="button">Click Here to Go Home</a></p>
</div>

<h4>Added: <%= @product.pretty_time%></h4>